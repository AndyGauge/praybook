<%= bootstrap_form_for(@proto_prayer, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-8") do |prayer_form| %>
	<%= prayer_form.text_field :title %>
	<%= prayer_form.text_area :body %>
	<%= prayer_form.form_group do %>
		<%= prayer_form.submit "Sign Up", class: "btn btn-primary btn-lg" %>
	<% end %>
<% end %>