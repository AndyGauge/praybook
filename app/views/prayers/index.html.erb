<% content_for :page_subtitle do %>
	Prayers
<% end %>
<%= render 'new' %>
<% @prayers.each do |prayer| %>
<div class="col-md-2 col-xl-3"> 
	<div class="row">
		<%= button_to "\u2714 Complete", complete_prayer_path(prayer), method: :post , html: {class: 'btn btn-danger btn-block'}%>  
	</div>
	<div class="row">
		<%= link_to edit_prayer_path(prayer), html: {class: 'btn btn-success btn-block', role: 'button'} do %>
		<%= icon :pencil, library: :font_awesome, class: 'fa-2' %> Edit
		<% end %>
	</div>
</div>
<div class="col-md-10 col-xl-9">
	<%= panel prayer.body, heading: prayer.title %>
</div>
<% end %>