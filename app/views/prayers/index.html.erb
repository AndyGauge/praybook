<% content_for :page_subtitle do %>
	Prayers
<% end %>
<%= render 'new' %>
<% @prayers.each do |prayer| %>
	
	<%= 
		panel prayer.body, heading: prayer.title
		modal title: "Answered" do %>
			<%= button_to "\u2714", complete_prayer_path(prayer) %>  God has answered this prayer 
			<% end %>

		<%= link_to "edit", edit_prayer_path(prayer) %>

<% end %>
