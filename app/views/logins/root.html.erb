<% content_for :page_subtitle do %>
  Join Praybook | Login
<% end %>
<% if @user.guest? -%>
<div class="row afore-main">
  <div class="col-sm-12">
    <h1>Sign Up</h1>
    <h6>Better than free</h6>
  </div>
</div>
<div class="gray-boxy row">
  <div class="col-sm-12">
    <%= render 'users/form' %>
  </div>
</div>
<div class="row afore-main">
  <div class="col-sm-12">
    <h1>Not ready?</h1>
    <h6>No commitment required - try it first</h6>
  </div>
</div>
<div class="row afore-main">
  <div class="col-md-6 col-xl-4 col-md-offset-3 col-xl-offset-4">
    <a class="btn btn-success btn-lg btn-block" href="<%= prayers_path %>"><span class="lead">Try for free</span></a>
  </div>
</div>
<% end -%>
<div class="row">
  <div class="col-sm-12 afore-main">
    </br>
    <p class="lead">Praybook is a prayer tracking website</p>
    <p> Praybook allows you access to your prayers from any device</p>
    <p> Update on the go, then prayfully consider them at home</p>
    <p> Answered prayers become praises, remember them with the rest of your thanksgivings.</p>
  </div>
</div>
<% console %>
