<%= form_for(@praise, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-8") do |prayer_form| %>
  <%= prayer_form.text_field :title, label: 'Praise' %>
  <%= prayer_form.text_area :body, label: 'Detail' %>
  <%= prayer_form.submit "Thank you Jesus", class: "btn btn-primary btn-lg" %>
<% end %>