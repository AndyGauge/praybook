<%= bootstrap_form_for(@user, url: user_path, layout: :horizontal) do |user_form| %>
	<%= user_form.text_field :name %>
	<%= user_form.email_field :email %>
	<%= user_form.password_field :password %>
	<%= user_form.password_field :password_confirmation %>
	<%= user_form.form_group do %>
		<%= user_form.submit "Sign Up", class: "btn btn-primary btn-lg" %>
	<% end %>
<% end %>