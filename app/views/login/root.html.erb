<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4">
			PRAYBOOK
		</div>
		<div class="hidden-xs hidden-sm col-md-6">&nbsp;</div>
		<%= bootstrap_form_tag url: '/login', layout: :inline do |login_form| %>
		<div class="col-sm-3 col-md-1">
			<%= login_form.email_field :email, hide_label: true %>
		</div>
		<div class="col-sm-3 col-md-1">
			<%= login_form.password_field :password , skip_label: true %><%= login_form.submit "Log in" %>
		</div>
		<% end %>
	</div>
</div>

	
	
	
