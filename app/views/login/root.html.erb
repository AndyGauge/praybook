<div class="container">
	<nav class="row purple-nav">
		<div class="col-sm-4 col-md-4 purple-title">
			PRAYBOOK
		</div>
		<div class="hidden-xs hidden-sm col-md-2">&nbsp;</div>
		<%= bootstrap_form_tag url: '/login', layout: :inline do |login_form| %>
		<div class="col-sm-3 col-md-2 input-fields">
			<%= login_form.email_field :email, hide_label: true, placeholder: "email" %>
		</div>
		<div class="col-sm-5 col-md-4 input-fields">
			<div class="input-group">
				<%= login_form.password_field :password , skip_label: true, placeholder: "password" %>
				<span class="input-group-btn">	
					<%= login_form.submit "LOG IN", class: "btn btn-default btn-purple" %>
				</span>
			</div>
		</div>
		<% end %>
	</nav>
	<div class="row afore-main">
		<h1>Sign Up</h1>
		<h6>Better than free</h6>
	</div>
	<div class="gray-boxy">
		<%= render 'users/form' %>
	</div>
	<div class="row afore-main">
			<h1>Not ready?</h1>
			<h6>No commitment required -- try it first</h6>
		<div class="col-md-6 col-xl-4 col-centers">
				<a class="btn btn-success btn-lg btn-block" href="#">Try for free</a>
		</div>
	</div>
	</main>
	<footer class="row">
		<ul class="footer-links col-md-8 col-lg-6 col-centers">
			<li><a href="#">Who are you people?</a></li>
			<li><a href="#">What are thinking?</a></li>
			<li><a href="#">Whose going to want this?</a></li>
		</ul>
	</footer>


</div>